<div class="row">
  <div class="col-sm-12 col-md-6 text-center">
    <h1>WELCOME</h1>
    <button class=" btn btn-primary mb-3" id="toggle">Show Form</button>
  <div class="col-12">
    <ul id="games-list">
    <% @games.each do |game| %>
      <li class="list-group-item game-item" data-id=<%= game.id %> data-name="<%= game.name%>">
      <%= game.name %> - <%= game.description %>
      </li>
    <% end %>
  </div>
  </div>
    <div class='col-sm-12 col-md-6 text-center' id="character-list">
    <h1 id="game" class="text-uppercase">Characters In Game</h1>
    <ul id="characters">
    </ul>
  </div>
</div>